{
  "name": "chutzpah-watch",
  "version": "1.0.5",
  "description": "Run chutzpah test cases in watch mode",
  "bin": {
    "chutzpah": "dist/index.js"
  },
  "scripts": {
    "prebuild": "rimraf coverage dist tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:release": "npm run build & copy readme.md dist\\ & copy package.json dist\\",
    "localpublish": "npm run build & cd dist & npm link",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "ci": "npm run build:release && npm publish"
  },
  "author": "Rupesh Tiwari",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.1.2",
    "@types/yargs": "^11.0.0",
    "ts-node": "6.0.3",
    "tslint": "^5.10.0",
    "typescript": "2.8.3",
    "tslint-microsoft-contrib": "^5.0.3"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "node-watch": "0.5.8",
    "rimraf": "^2.6.2",
    "yargs": "^11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roopkt/chutzpah-watch.git"
  },
  "keywords": [
    "chutzpah",
    "watch",
    "continous",
    "testing",
    "cli"
  ],
  "engine": {
    "node": ">=7"
  }
}